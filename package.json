{
  "name": "mssp-biz-center",
  "version": "0.1.0-alpha.3",
  "description": "MSSP Business Center - Team Work Portal System",
  "private": true,
  "workspaces": [
    "apps/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "test": "turbo run test",
    "lint": "turbo run lint",
    "clean": "turbo run clean && rm -rf node_modules",
    "docker:up": "docker compose -f infra/docker/docker-compose.dev.yml up -d",
    "docker:down": "docker compose -f infra/docker/docker-compose.dev.yml down"
  },
  "devDependencies": {
    "turbo": "^2.3.0",
    "typescript": "^5.7.0"
  },
  "packageManager": "pnpm@9.15.0",
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=9.0.0"
  }
}
